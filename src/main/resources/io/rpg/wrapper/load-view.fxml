<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <TextArea fx:id="outputArea" text="Load config root.json file" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="400.0" styleClass="menu_textarea" wrapText="true" />
      <BorderPane>
         <left>
            <Button onAction="#onBackClick" mnemonicParsing="false" text="BACK" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="menu_button" />
                  <String fx:value="small_button" />
               </styleClass>
            </Button>
         </left>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <center>
            <Button onAction="#onLoadClick" mnemonicParsing="false" text="LOAD" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="small_button" />
                  <String fx:value="menu_button" />
               </styleClass>
            </Button>
         </center>
         <right>
            <Button fx:id="startButton" onAction="#onStartClick" disable="true" mnemonicParsing="false" text="START" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="menu_button" />
                  <String fx:value="small_button" />
               </styleClass>
            </Button>
         </right>
      </BorderPane>
   </children>
</VBox>
